pipeline {
    agent { label 'java' }

    environment {
        DOCKERHUB_USER = 'vishwacloudlab'
        DOCKERHUB_cred = credentials('dockerhub-creds') // Jenkins Credential ID
        IMAGE_NAME = 'py-redis-dec25'
        IMAGE_TAG  = "${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'git@github.com:Vishwanathms/t7.14-py-jenkins.git', credentialsId: 'github-cred'
            }
        }

        stage('Clean up image and container') {
            steps {
                script {
               //     sh 'git clone git@github.com:Vishwanathms/t7.14-py-jenkins.git'
                    sh 'docker-compose down || true'
                    sh 'PREV_BUILD=$((BUILD_NUMBER - 1))'
                    sh 'docker image rmi $DOCKERHUB_USER/$IMAGE_NAME:$PREV_BUILD || true'
                }
            }  
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t $DOCKERHUB_USER/$IMAGE_NAME:$BUILD_NUMBER .'
                }
            }
        }
        stage('Push to DockerHub') {
            steps {
                script {
                    sh "echo $DOCKERHUB_cred_PSW | docker login -u $DOCKERHUB_USER --password-stdin"
                    sh 'docker push $DOCKERHUB_USER/$IMAGE_NAME:$BUILD_NUMBER'
                }
            }
        }
        stage('Prepare env file') {
            steps {
                sh '''
                echo "IMAGE_NAME=$DOCKERHUB_USER/$IMAGE_NAME" > .env
                echo "IMAGE_TAG=${IMAGE_TAG}" >> .env
                '''
            }
        }
        stage('local Deployment Test') {
            steps {
                sh 'docker-compose up -d'
            }
        }
        stage('Deploy to kube') {
            steps {
                sh '''
                  kubectl apply -f kube-files-template
                  kubectl set image deployment/flask-redis-pp \
                    flask-app=vishwacloudlab/py-redis-dec25:${IMAGE_TAG}
                '''
            }
        }
    }

}
